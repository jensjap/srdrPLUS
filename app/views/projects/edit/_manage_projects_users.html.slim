= simple_form_for(@project, html: { 'abide': '', 'live-validate': true }) do |f|
  .form-inputs style="display: inline-block;"
    table.hover style="table-layout: fixed;"
      thead
        tr
          th width="150px;"
          th width="400px;" colspan="4"
            div class="button tiny" data-open="member-roles-modal" See Role Definitions
          th width="100px;"
          th
        tr
          th User
          - Role.all.each do |role|
            th = role.name
          th
          th
      tbody#projects-users-table
        = f.simple_fields_for :projects_users do |pu_f|
          = render 'projects_users/form', f: pu_f
