<div class="nested-fields added-item">
  <div style="width: 92%;">
    <div class="select-row" style="margin-top: 1rem; margin-bottom: 1rem;">
      <%= f.association :citation, as: :select, collection: [], prompt: 'Choose a citation', label: false, input_html: { class: 'citation-select' } %>
    </div>
    <div class="buttons-row m-10">
      <span class="save-citation button success small">Save Citation</span>
      <%= link_to_remove_association 'Cancel', f, class: 'button alert small cancel-button' %>
    </div>
  </div>
</div>
