<table>
  <caption>Descriptive Statistics</caption>
  <thead>
    <tr>
      <th>Measure</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% rss.result_statistic_sections_measures.each do |rssm| %>
      <tr>
        <td><%= rssm.measure.name %></td>
        <td>
          <% record = TpsComparisonsRssm.find_record(timepoint: timepoint, comparison: comparison, result_statistic_sections_measure: rssm) %>
          <%= simple_form_for(record, remote: true) do |f| %>
            <%= f.input :name, as: :string, label: false, class: 'form-control', wrapper_html: { style: 'padding-bottom: 0;' }, input_html: { style: 'margin-bottom: 0;' } %>
            <div id="record-id-<%= record.id.to_s %>" class="record-info" style="opacity: 0;">Saved!</div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
