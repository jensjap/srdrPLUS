<% index_tests = eefps.extractions_extraction_forms_projects_sections_type1s.where(type1_type: Type1Type.find_by(name: Type1Type::INDEX_TEST)) %>
<% reference_tests = eefps.extractions_extraction_forms_projects_sections_type1s.where(type1_type: Type1Type.find_by(name: Type1Type::REFERENCE_TEST)) %>
<table>
  <col style="width: 45%;">
  <col style="width: 45%;">
  <col style="width: 10%;">
  <thead style="background: initial; border: none;">
    <tr>
      <th style="border: none;">Index Tests</th>
      <th style="border: none;">Description</th>
      <th style="border: none;"></th>
    </tr>
  </thead>
  <tbody>
    <% index_tests.each do |it| %>
      <tr>
        <td><%= it.type1.name %></td>
        <td><%= it.type1.description %></td>
        <td>
          <div><%= link_to edit_extractions_extraction_forms_projects_sections_type1_path(it) do %><i class="fi-pencil"></i> Edit<% end %></div>
          <div><%= link_to it, data: { confirm: 'Are you sure?' }, method: :delete do %><i class="fi-trash"></i> Remove<% end %></div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br><br>
<table>
  <col style="width: 45%;">
  <col style="width: 45%;">
  <col style="width: 10%;">
  <thead style="background: initial; border: none;">
    <tr>
      <th style="border: none;">Reference Tests</th>
      <th style="border: none;">Description</th>
      <th style="border: none;"></th>
    </tr>
  </thead>
  <tbody>
    <% reference_tests.each do |rt| %>
      <tr>
        <td><%= rt.type1.name %></td>
        <td><%= rt.type1.description %></td>
        <td>
          <div><%= link_to edit_extractions_extraction_forms_projects_sections_type1_path(rt) do %><i class="fi-pencil"></i> Edit<% end %></div>
          <div><%= link_to rt, data: { confirm: 'Are you sure?' }, method: :delete do %><i class="fi-trash"></i> Remove<% end %></div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
