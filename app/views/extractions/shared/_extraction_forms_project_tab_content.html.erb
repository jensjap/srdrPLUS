<a id="toggle-sections-link" class="button tiny" style="margin-left: 31px;">
  <span class="toggle-hide">
    <i class="fi-arrow-left"></i>
    Hide Menu
  </span>
  <span class="toggle-hide hide">
    <i class="fi-arrow-right"></i>
  </span>
</a>
<% if action_name.eql?('consolidate') %>
  <a id="toggle-consolidated-extraction-link" class="button tiny float-right">
    <span class="toggle-hide">
      Hide Consolidated Extraction Form
      <i class="fi-arrow-right"></i>
    </span>
    <span class="toggle-hide hide">
      <i class="fi-arrow-left"></i>
    </span>
  </a>
<% end %>
<div class="tabs-content" data-tabs-content="extraction-forms-projects-tabs">
  <% @extraction_forms_projects.each_with_index do |efp, idx| %>
    <div id="panel-extraction-forms-project-<%= efp.id %>" class="tabs-panel <%= idx == 0 ? 'is-active' : '' %>">
      <div class="row expanded">
        <div class="toggle-sections-link-medium-2-0-hide column medium-2">
          <%= render 'extractions/shared/extraction_forms_projects_section_tab_links', efp: efp %>
        </div>
        <div class="toggle-sections-link-medium-10-12 column medium-10 ajax-section" @click="if (extraction.status !== 'awaiting_work' && extraction.status !== 'work_returned') { alert('Please set extraction status to \'awaiting_work\' to make changes.') }" :class="{ 'cursor-not-allowed': extraction.status !== 'awaiting_work' && extraction.status !== 'work_returned', 'opacity-80': extraction.status !== 'awaiting_work' && extraction.status !== 'work_returned' }">
          <div :class="{ 'pointer-events-none': extraction.status !== 'awaiting_work' && extraction.status !== 'work_returned' }">
            <%= render 'extractions/shared/extraction_forms_projects_section_tab_content', efp: efp %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
