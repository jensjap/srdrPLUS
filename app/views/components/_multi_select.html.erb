<div
  @click.outside="open = false"
  @keyup.escape.window="open = false"
  class="w-full flex flex-col items-center mx-auto"
>
  <div class="w-full">
    <div class="flex flex-col items-center relative">
      <div class="w-full">
        <div class="flex border border-gray-200 bg-white rounded">
          <div
            class="flex flex-auto flex-wrap h-8 cursor-pointer overflow-y-auto"
            @click="open = true;"
          >
            <input type="hidden" :name="`${pns}[${cns}][]`" value="" />
            <template x-for="selection in $data[pns][cns].selections">
              <div
                class="cursor-pointer flex justify-center items-center m-1 font-light py-1 px-2 rounded-full text-white border"
                :class="!$data[pns][cns].options.some((o) => o.value == selection.value) ? 'bg-orange-500 hover:bg-orange-400' : 'bg-srdrpurple hover:bg-purple-800'"
                @click.stop="$data[pns][cns].selections = $data[pns][cns].selections.filter(s => s.value != selection.value);"
              >
                <input
                  type="hidden"
                  :name="`${pns}[${cns}][]`"
                  :value="selection.key"
                />
                <div
                  class="leading-none max-w-full flex-initial"
                  x-text="selection.value"
                ></div>
                <div class="flex flex-auto flex-row-reverse">
                  <div>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="100%"
                      height="100%"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="feather feather-x rounded-full w-4 h-4 ml-2"
                    >
                      <line x1="18" y1="6" x2="6" y2="18"></line>
                      <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                  </div>
                </div>
              </div>
            </template>
            <template x-if="customInput">
              <div class="flex-1">
                <input
                  placeholder=""
                  class="bg-transparent p-1 px-2 appearance-none outline-none h-full w-full text-gray-800"
                  @keydown.enter.prevent="
                    if ($el.value == '') { return }
                    if (!$data[pns][cns].selections.some((s) => s.value == $el.value)) {
                      $data[pns][cns].selections.push({ key: `_${$el.value}`, value: $el.value });
                    };
                    $el.value = '';
                  "
                  @keydown.backspace="
                    if ($el.value == '') {
                      $data[pns][cns].selections.pop()
                    }
                  "
                />
              </div>
            </template>
          </div>
          <div
            class="text-gray-300 flex justify-center items-center border-l border-gray-200"
          >
            <div
              class="cursor-pointer flex justify-center items-center w-6 h-6 text-gray-600 outline-none focus:outline-none"
              @click="open = !open"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1"
                x-cloak
                x-show="open"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19 9l-7 7-7-7"
                />
              </svg>

              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1"
                x-cloak
                x-show="!open"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 15l7-7 7 7"
                />
              </svg>
            </div>
          </div>
        </div>
      </div>
      <div
        class="absolute shadow top-full bg-white z-40 w-full lef-0 rounded max-h-[300px] overflow-y-auto"
        x-show="open"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="transform opacity-0"
        x-transition:enter-end="transform opacity-100"
        x-transition:leave="transition ease-in duration-175"
        x-transition:leave-start="transform opacity-100"
        x-transition:leave-end="transform opacity-0"
        x-cloak
      >
        <div class="flex flex-col w-full">
          <template x-for="option in $data[pns][cns].options">
            <div
              class="cursor-pointer w-full border-gray-100 border-b hover:bg-purple-100"
              @click="
                if ($data[pns][cns].selections.some((s) => s.value == option.value)) {
                  $data[pns][cns].selections = $data[pns][cns].selections.filter(s => s.value != option.value);
                } else {
                  $data[pns][cns].selections.push(option);
                }
              "
            >
              <div
                class="flex w-full items-center p-1 border-transparent border-l-2 relative"
                :class="$data[pns][cns].selections.some((s) => s.value == option.value) ? 'border-purple-600' : 'hover:border-purple-100'"
              >
                <div class="w-full items-center flex">
                  <div class="mx-2 leading-6" x-text="option.value"></div>
                </div>
              </div>
            </div>
          </template>
          <div
            class="cursor-pointer w-full border-gray-100 border-b hover:bg-purple-100"
            x-cloak
            x-show="$data[pns][cns].options.length === 0"
            @click="open = false"
          >
            <div
              class="flex w-full items-center p-1 border-transparent border-l-2 relative"
            >
              <div class="w-full items-center flex">
                <div class="mx-2 leading-6 text-gray-400">No Data</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
