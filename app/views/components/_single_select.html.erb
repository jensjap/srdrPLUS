<div
  @click.outside="open = false"
  class="w-full flex flex-col items-center mx-auto"
  @keyup.escape.window="open = false"
>
  <div class="w-full">
    <div class="flex flex-col items-center relative">
      <div class="w-full">
        <div class="flex border border-gray-200 bg-white rounded">
          <div
            class="flex flex-auto flex-wrap h-8 cursor-pointer"
            @click="open = !open"
          >
            <input type="hidden" :name="`${pns}[${cns}]`" value="" />
            <div class="cursor-pointer flex justify-center items-center">
              <input
                type="hidden"
                :name="`${pns}[${cns}]`"
                :value="$data[pns][cns].selection.key"
              />
              <div
                class="leading-none max-w-full flex-initial"
                x-text="$data[pns][cns].selection.value"
              ></div>
            </div>
            <template x-if="customInput">
              <div class="flex-1">
                <input
                  placeholder=""
                  class="bg-transparent p-1 px-2 appearance-none outline-none h-full w-full text-gray-800"
                  @keydown.enter.prevent="$data[pns][cns].selection = { key: $el.value, value: $el.value }; $el.value = ''"
                />
              </div>
            </template>
          </div>
          <div
            class="text-gray-300 flex justify-center items-center border-l border-gray-200"
          >
            <div
              class="cursor-pointer flex justify-center items-center w-6 h-6 text-gray-600 outline-none focus:outline-none"
              @click="open = !open"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1"
                x-cloak
                x-show="open"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19 9l-7 7-7-7"
                />
              </svg>

              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1"
                x-cloak
                x-show="!open"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5 15l7-7 7 7"
                />
              </svg>
            </div>
          </div>
        </div>
      </div>
      <div
        class="absolute shadow top-full bg-white z-40 w-full lef-0 rounded max-h-[300px] overflow-y-auto"
        x-show="open"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="transform opacity-0"
        x-transition:enter-end="transform opacity-100"
        x-transition:leave="transition ease-in duration-175"
        x-transition:leave-start="transform opacity-100"
        x-transition:leave-end="transform opacity-0"
        x-cloak
      >
        <div class="flex flex-col w-full">
          <template x-for="option in $data[pns][cns].options">
            <div
              class="cursor-pointer w-full border-gray-100 border-b hover:bg-purple-100"
              @click="$data[pns][cns].selection = { key: option.key, value: option.value }; open = false"
            >
              <div
                class="flex w-full items-center p-1 border-transparent border-l-2 relative"
                :class="$data[pns][cns].selection.value == option.value ? 'border-purple-600' : 'hover:border-purple-100'"
              >
                <div class="w-full items-center flex">
                  <div class="mx-2 leading-6" x-text="option.value"></div>
                </div>
              </div>
            </div>
          </template>
          <div
            class="cursor-pointer w-full border-gray-100 border-b hover:bg-purple-100"
            x-cloak
            x-show="$data[pns][cns].options.length === 0"
            @click="open = false"
          >
            <div
              class="flex w-full items-center p-1 border-transparent border-l-2 relative"
            >
              <div class="w-full items-center flex">
                <div class="mx-2 leading-6 text-gray-400">No Data</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
