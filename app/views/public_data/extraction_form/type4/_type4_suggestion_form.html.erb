<% type5 = efps.extraction_forms_projects_sections_type1s.where('type1_type_id = 5') %>
<% type6 = efps.extraction_forms_projects_sections_type1s.where('type1_type_id = 6') %>

<% if type5.empty? && type6.empty? %>
  <div>N/A</div>
<% else %>
  <h5>Index Tests</h5>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Thresholds</th>
      </tr>
    </thead>
    <tbody>
      <% type5.each do |efpst1| %>
        <tr>
          <td><%= efpst1.type1.name %></td>
          <td><%= efpst1.type1.description %></td>
          <td><%= efpst1.extraction_forms_projects_sections_type1_rows.collect(&:population_name).collect(&:name).join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h5>Reference Tests</h5>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Thresholds</th>
      </tr>
    </thead>
    <tbody>
      <% type6.each do |efpst1| %>
        <tr>
          <td><%= efpst1.type1.name %></td>
          <td><%= efpst1.type1.description %></td>
          <td><%= efpst1.extraction_forms_projects_sections_type1_rows.collect(&:population_name).collect(&:name).join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
