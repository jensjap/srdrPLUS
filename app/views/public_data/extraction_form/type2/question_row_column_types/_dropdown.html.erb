<%# Find QuestionRowColumnFieldsQuestionRowColumnFieldOptions with QuestionRowColumnFieldOption 'answer_choice' %>
<div class="pb-1 text-sm">Single Choice</div>
<% qrc.question_row_columns_question_row_column_options.select { |x| x.question_row_column_option_id == 1 }.each do |qrcqrco| %>
  <%= radio_button_tag("radio-#{qrc.id}", nil, false, data: { prereq: "prereq-#{qrcqrco.class}-#{qrcqrco.id}" }) %>
  <%= qrcqrco.name %>
  <% if qrcqrco.includes_followup %>
    <%= text_field_tag('Follow up', nil, style: 'display: inline-block; width: 140px;') %>
  <% end %>
  <br>
<% end %>
