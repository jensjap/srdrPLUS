<h1 class="text-2xl font-bold mb-6">New User</h1>

<%= form_with(model: @user, local: true, class: "space-y-6 max-w-lg mx-auto bg-white p-8 rounded shadow") do |form| %>
  <div>
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :email, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500", required: true %>
  </div>

  <div>
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <div class="flex gap-2">
      <%= form.text_field :password, id: "user_password", class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500", autocomplete: "off", required: true %>
      <button type="button" id="generate-password" class="bg-gray-200 px-3 py-1 rounded text-sm hover:bg-gray-300">Generate</button>
    </div>
    <p class="text-xs text-gray-500 mt-1">Click "Generate" for a secure password.</p>
  </div>

  <fieldset class="space-y-4">
    <legend class="block text-sm font-medium text-gray-700 mb-2">Profile</legend>
    <%= form.fields_for :profile do |profile_fields| %>
      <div>
        <%= profile_fields.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= profile_fields.text_field :first_name, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= profile_fields.label :middle_name, class: "block text-sm font-medium text-gray-700" %>
        <%= profile_fields.text_field :middle_name, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= profile_fields.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= profile_fields.text_field :last_name, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    <% end %>
  </fieldset>

  <div>
    <%= form.submit "Create User", class: "w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 font-semibold" %>
  </div>
<% end %>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const btn = document.getElementById("generate-password");
    const input = document.getElementById("user_password");
    btn.addEventListener("click", function() {
      const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()_+-=";
      let password = "";
      for (let i = 0; i < 12; i++) {
        password += charset.charAt(Math.floor(Math.random() * charset.length));
      }
      input.value = password;
    });
  });
</script>