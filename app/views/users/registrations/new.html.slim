- provide(:title, 'Sign Up')

.row.column
  h2
    | Register a new SRDR+ Account

.row
  .column.small-9
  .column.small-3 style="border: solid 1px black; padding: 5px; width: 200px;"
    p Form Approved
    p OMB No. 0935-0244
    p Exp. Date 11/30/2025

.row
  .column.medium-6.small-centered
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { 'abide': '' } }) do |f|
      .alert.callout data-abide-error='' style='display: none;'
        p
          i.fi-alert>
          ' Please correct the errors below.
      /= f.error_notification

      .form-inputs
        = f.input :email, required: true, hint: 'Email must have the following format: example@domain.edu', autofocus: true
        = f.simple_fields_for :profile do |p|
          = p.input :first_name, required: true
          = p.input :middle_name, required: false
          = p.input :last_name, required: true
        = f.input :password, label: "Password (Must contain a minium of #{@minimum_password_length} characters.)", required: true,
                             input_html: { minlength: @minimum_password_length }
        /= f.input :password_confirmation, required: true

      .small
        br
        | Already have an account?
        =< link_to('Sign in.', new_user_session_path)

      br

      .form-actions
        = f.button :submit, "Sign up"

    = render "users/shared/links"

