<% provide(:title, 'Sign Up') %>
<div class="row column">
  <h2>Register a new SRDR+ Account</h2>
</div>
<div class="row">
  <div class="column small-9"></div>
  <div class="column small-3" style="border: solid 1px black; padding: 5px; width: 200px;">
    <p>Form Approved</p>
    <p>OMB No. 0935-0244</p>
    <p>Exp. Date 11/30/2025</p>
  </div>
</div>
<div class="row">
  <div class="column medium-6 small-centered">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { 'abide': '' } }) do |f| %>
      <div class="alert callout" data-abide-error style="display: none;">
        <p><i class="fi-alert"></i> Please correct the errors below.</p>
      </div>
      <div class="form-inputs">
        <%= f.input :email, required: true, hint: 'Email must have the following format: example@domain.edu', autofocus: true %>
        <%= f.simple_fields_for :profile do |p| %>
          <%= p.input :first_name, required: true %>
          <%= p.input :middle_name, required: false %>
          <%= p.input :last_name, required: true %>
        <% end %>
        <%= f.input :password, label: "Password (Must contain a minium of #{@minimum_password_length} characters.)", required: true, input_html: { minlength: @minimum_password_length } %>
      </div>
      <div class="small">
        <br>
        Already have an account?
        <%= link_to('Sign in.', new_user_session_path) %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
<br>
