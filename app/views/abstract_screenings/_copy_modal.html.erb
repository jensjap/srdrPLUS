<!-- Copy Extraction Modal -->
<div
  class="left-0 right-0 top-0 bottom-0 m-auto fixed h-[90vh] w-[90vw] z-50 transform overflow-hidden rounded-2xl bg-white px-6 pt-6 pb-6 text-left shadow-2xl transition-all sm:p-8 border border-slate-300"
  x-show="showCopyModal"
  x-cloak
  x-transition:enter="ease-out duration-300"
  x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
  x-transition:leave="ease-in duration-200"
  x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
  x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  @click.outside="showCopyModal = false"
  @keyup.window.esc="showCopyModal = false"
  x-init="$watch('showCopyModal', value => { if (value) checkExtractionCompatibility(); })"
>
  <div class="absolute top-0 right-0 pt-4 pr-4 block">
    <button
      type="button"
      class="cursor-pointer rounded-full bg-slate-100 text-gray-500 hover:bg-indigo-100 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 shadow"
      @click="setTimeout(() => showCopyModal = false, 100)"
      aria-label="Close"
    >
      <span class="sr-only">Close</span>
      <svg
        class="h-6 w-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>
  </div>
  <div class="overflow-y-auto overscroll-contain h-full pr-8">
    <div class="mt-6">
      <h3
        class="text-lg font-semibold text-indigo-700 mb-4"
        id="copy-modal-title"
      >
        Copy Extraction to Project
      </h3>
      <div class="mt-4">
        <p class="text-sm text-gray-600 mb-4">
          Select a project to copy this extraction to:
        </p>
        <div class="overflow-y-auto h-auto border border-slate-200 rounded-lg">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-indigo-50 sticky top-0">
              <tr>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider w-24"
                >
                  Project ID
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider"
                >
                  Project Title
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider w-48"
                >
                  Compatibility
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider w-32"
                >
                  Action
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
              <template x-for="project in userProjects" :key="project.id">
                <tr class="hover:bg-indigo-50 transition">
                  <td
                    class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"
                    x-text="project.id"
                  ></td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div x-text="project.name"></div>
                    <!-- Show differences if incompatible -->
                    <template x-if="hasIncompatibility(project.id)">
                      <div class="mt-2">
                        <button
                          @click="project.showDifferences = !project.showDifferences"
                          class="text-xs text-red-600 hover:text-red-800 underline"
                          type="button"
                        >
                          <span
                            x-text="project.showDifferences ? 'Hide differences' : 'Show differences'"
                          ></span>
                        </button>
                        <div
                          x-show="project.showDifferences"
                          class="mt-2 p-2 bg-red-50 border border-red-200 rounded text-xs"
                        >
                          <ul
                            class="list-disc list-inside space-y-1 text-red-700"
                          >
                            <template
                              x-for="diff in getCompatibilityStatus(project.id).differences"
                              :key="diff"
                            >
                              <li x-text="diff"></li>
                            </template>
                          </ul>
                        </div>
                      </div>
                    </template>
                  </td>
                  <td class="px-6 py-4 text-sm">
                    <!-- Loading state -->
                    <div
                      x-show="isCompatibilityLoading(project.id)"
                      class="flex items-center text-gray-500"
                    >
                      <svg
                        class="animate-spin h-4 w-4 mr-2"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                      >
                        <circle
                          class="opacity-25"
                          cx="12"
                          cy="12"
                          r="10"
                          stroke="currentColor"
                          stroke-width="4"
                        ></circle>
                        <path
                          class="opacity-75"
                          fill="currentColor"
                          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        ></path>
                      </svg>
                      <span class="text-xs">Checking...</span>
                    </div>
                    <!-- Compatible -->
                    <div
                      x-show="isCompatible(project.id)"
                      class="flex items-center text-green-600"
                    >
                      <svg
                        class="h-5 w-5 mr-1"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span class="text-xs font-medium">Compatible</span>
                    </div>
                    <!-- Incompatible -->
                    <div
                      x-show="hasIncompatibility(project.id)"
                      class="flex items-center text-red-600"
                    >
                      <svg
                        class="h-5 w-5 mr-1"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span class="text-xs font-medium">Incompatible</span>
                    </div>
                    <!-- Error -->
                    <div
                      x-show="hasCompatibilityError(project.id)"
                      class="flex items-center text-orange-600"
                    >
                      <svg
                        class="h-5 w-5 mr-1"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span class="text-xs">Error</span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <button
                      @click="console.log('Copy extraction', selectedExtractionId, 'to project', project.id)"
                      :disabled="!isCompatible(project.id)"
                      :class="{
                        'opacity-50 cursor-not-allowed': !isCompatible(project.id),
                        'hover:bg-indigo-700': isCompatible(project.id)
                      }"
                      class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 mr-1"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                        />
                      </svg>
                      Copy
                    </button>
                  </td>
                </tr>
              </template>
              <template x-if="userProjects.length === 0">
                <tr>
                  <td
                    colspan="3"
                    class="px-6 py-4 text-center text-sm text-gray-500"
                  >
                    Loading projects...
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
