    | #{ screen_api_v1_assignment_url(@assignment.id) }
  #history-json-url
    | #{ history_api_v1_assignment_url(@assignment.id) }
  #root-url
    | #{ root_url }
  #assignment-id
    | #{ @assignment.id }
  #authenticity-token
    | #{ form_authenticity_token }
