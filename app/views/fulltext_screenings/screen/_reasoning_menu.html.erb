<div
  class="relative z-10"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  x-show="reasoningMenu"
  x-cloak
>
  <div
    class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
    x-show="reasoningMenu"
    x-transition:enter="ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
  ></div>

  <div class="fixed z-10 inset-0 overflow-y-auto">
    <div class="flex items-center justify-center min-h-full p-4 text-center">
      <div
        class="relative bg-white rounded-lg px-4 pt-5 pb-4 text-left shadow-xl transform transition-all w-full lg:w-1/3 h-[90vh] sm:mt-4 mb-8 sm:p-6"
        x-show="reasoningMenu"
        x-transition:enter="ease-out duration-300"
        x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave="ease-in duration-200"
        x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
        x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        @click.outside="if (addReasonModal.on == false) { reasoningMenu = false }"
      >
        <button
          type="button"
          class="cursor-pointer z-10 absolute top-4 right-4 bg-gray-100 rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
          @click="reasoningMenu = false"
        >
          <span class="sr-only">Close menu</span>
          <!-- Heroicon name: outline/x -->
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>

        <div class="fixed inset-5 mb-24 overflow-y-scroll">
          <template x-if="label_value == -1">
            <div class="mb-4">
              <h1 class="text-2xl flex items-center">
                Mark Rejected
                <div
                  class="bg-red-500 flex justify-center items-center rounded-full text-white mx-4"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-10 w-10 p-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
              </h1>
            </div>
          </template>
          <template x-if="label_value == 0">
            <div class="mb-4">
              <h1 class="text-2xl flex items-center">
                Mark Maybe
                <div
                  class="bg-srdrpurple flex justify-center items-center rounded-full text-white mx-4"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-10 w-10 p-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 2a1 1 0 011 1v1.323l3.954 1.582 1.599-.8a1 1 0 01.894 1.79l-1.233.616 1.738 5.42a1 1 0 01-.285 1.05A3.989 3.989 0 0115 15a3.989 3.989 0 01-2.667-1.019 1 1 0 01-.285-1.05l1.715-5.349L11 6.477V16h2a1 1 0 110 2H7a1 1 0 110-2h2V6.477L6.237 7.582l1.715 5.349a1 1 0 01-.285 1.05A3.989 3.989 0 015 15a3.989 3.989 0 01-2.667-1.019 1 1 0 01-.285-1.05l1.738-5.42-1.233-.617a1 1 0 01.894-1.788l1.599.799L9 4.323V3a1 1 0 011-1zm-5 8.274l-.818 2.552c.25.112.526.174.818.174.292 0 .569-.062.818-.174L5 10.274zm10 0l-.818 2.552c.25.112.526.174.818.174.292 0 .569-.062.818-.174L15 10.274z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
              </h1>
            </div>
          </template>
          <template x-if="label_value == 1">
            <div class="mb-4">
              <h1 class="text-2xl flex items-center">
                Mark Accepted
                <div
                  class="bg-green-500 flex justify-center items-center rounded-full text-white mx-4"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-10 w-10 p-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
              </h1>
            </div>
          </template>
          <div class="min-h-[100px]">
            <h1
              class="text-xl"
              x-text="mustSelectReason() ? '*Reason' : 'Reason'"
            ></h1>
            <hr class="m-0" />
            <label for="notes" class="block text-sm text-gray-700"
              >Select one reason</label
            >
            <div class="grid grid-rows sm:grid-cols-4 gap-4 mt-4 mb-8">
              <template
                x-for="[key, value] in Object.entries(predefined_reasons)"
              >
                <span
                  :class="value ? 'bg-srdrpurple' : 'bg-gray-700'"
                  @click="turnOffAllReasons(); predefined_reasons[key] = !value; postLabel(false)"
                  class="text-center drop-shadow select-none cursor-pointer justify-center inline-flex items-center px-3 py-4 rounded-full text-sm text-white font-black"
                  x-text="key"
                >
                </span>
              </template>
              <template x-for="[key, value] in Object.entries(custom_reasons)">
                <div class="relative">
                  <span
                    :class="value ? 'bg-srdrpurple' : 'bg-gray-700'"
                    @click="turnOffAllReasons(); custom_reasons[key] = !value; postLabel(false)"
                    class="w-full text-center drop-shadow select-none cursor-pointer justify-center inline-flex items-center px-3 py-4 rounded-full text-sm text-white font-black"
                    x-text="key"
                  >
                  </span>
                  <button
                    type="button"
                    class="cursor-pointer absolute top-0 right-0 flex-shrink-0 ml-0.5 h-4 w-4 rounded-full inline-flex items-center justify-center text-white bg-red-500"
                    @click="deleteCustomValue('custom_reasons', key); postLabel(false)"
                  >
                    <span class="sr-only">Remove large option</span>
                    <svg
                      class="h-2 w-2"
                      stroke="currentColor"
                      fill="none"
                      viewBox="0 0 8 8"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-width="1.5"
                        d="M1 1l6 6m0-6L1 7"
                      />
                    </svg>
                  </button>
                </div>
              </template>
              <span
                @click="addReasonModal = { on: true, type: 'Reason' }; $nextTick(() => { $refs.newCustomValueInput.focus() })"
                class="drop-shadow select-none cursor-pointer justify-center inline-flex items-center text-green-900 font-black"
                x-show="!options.only_predefined_reasons"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-10 w-10"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </span>
            </div>
          </div>

          <div class="min-h-[100px]">
            <h1
              class="text-xl"
              x-text="mustSelectTag() ? '*Tags' : 'Tags'"
            ></h1>
            <hr class="m-0" />
            <label for="notes" class="block text-sm text-gray-700"
              >Select one or more reasons</label
            >
            <div class="grid grid-rows sm:grid-cols-4 gap-4 mt-4 mb-8">
              <template x-for="[key, value] in Object.entries(predefined_tags)">
                <span
                  :class="value ? 'bg-srdrpurple' : 'bg-gray-700'"
                  @click="predefined_tags[key] = !value; postLabel(false)"
                  class="text-center drop-shadow select-none cursor-pointer justify-center inline-flex items-center px-3 py-4 rounded-full text-sm text-white font-black"
                  x-text="key"
                >
                </span>
              </template>
              <template x-for="[key, value] in Object.entries(custom_tags)">
                <div class="relative">
                  <span
                    :class="value ? 'bg-srdrpurple' : 'bg-gray-700'"
                    @click="custom_tags[key] = !value; postLabel(false)"
                    class="w-full text-center drop-shadow select-none cursor-pointer justify-center inline-flex items-center px-3 py-4 rounded-full text-sm text-white font-black"
                    x-text="key"
                  >
                  </span>
                  <button
                    type="button"
                    class="cursor-pointer absolute top-0 right-0 flex-shrink-0 ml-0.5 h-4 w-4 rounded-full inline-flex items-center justify-center text-white bg-red-500"
                    @click="deleteCustomValue('custom_tags', key); postLabel(false)"
                  >
                    <span class="sr-only">Remove large option</span>
                    <svg
                      class="h-2 w-2"
                      stroke="currentColor"
                      fill="none"
                      viewBox="0 0 8 8"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-width="1.5"
                        d="M1 1l6 6m0-6L1 7"
                      />
                    </svg>
                  </button>
                </div>
              </template>
              <span
                @click="addReasonModal = { on: true, type: 'Tag' }; $nextTick(() => { $refs.newCustomValueInput.focus(); });"
                class="drop-shadow select-none cursor-pointer justify-center inline-flex items-center text-green-900 font-black"
                x-show="!options.only_predefined_tags"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-10 w-10"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </span>
            </div>
          </div>
          <div class="min-h-[100px]">
            <h1
              class="text-xl"
              x-text="mustEnterNotes() ? '*Notes' : 'Notes'"
            ></h1>
            <hr class="m-0" />
            <div>
              <label for="notes" class="block text-sm text-gray-700"
                >Write in notes</label
              >
              <div class="mt-1">
                <textarea
                  rows="4"
                  name="notes"
                  id="notes"
                  x-model="notes"
                  class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md p-2"
                  @input.debounce.500ms="postLabel(false)"
                ></textarea>
              </div>
            </div>
          </div>
        </div>
        <div
          class="fixed bottom-0 h-24 mb-5 mx-5 left-0 right-0 flex flex-col justify-center items-center content-center"
          x-show="label_value !== null"
        >
          <button
            type="button"
            class="cursor-pointer justify-center m-auto w-full h-20 inline-flex items-center border border-transparent text-xl font-medium rounded-md shadow-sm text-white bg-green-900 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            :class="satisfiesReasoning() ? '' : 'cursor-not-allowed bg-gray-900 hover:bg-gray-700'"
            @click="if (satisfiesReasoning()) postLabel(true)"
            x-text="satisfiesReasoning() ? 'Submit' : 'Please fill in the required data above'"
          ></button>
        </div>
      </div>
    </div>
  </div>
</div>
