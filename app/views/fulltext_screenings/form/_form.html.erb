<div class="px-4 sm:px-6 lg:px-8 pt-8" x-data="form">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">
        <%= params[:action] == 'new' ? 'Create New Fulltext Screening' : 'Update
        Fulltext Screening' %>
      </h1>
      <p class="mt-2 text-sm text-gray-700">
        Setup an fulltext screening process for your project members and pool of
        citations
      </p>
    </div>
  </div>
  <div class="flex flex-col w-full">
    <!-- prettier-ignore -->
    <%= simple_form_for([action_name == 'edit' ? nil : @project, @fulltext_screening]) do |f| %>
    <div
      class="mt-8"
      x-data="{ pns: 'fulltext_screening', cns: 'fulltext_screening_type', customInput: false, open: false }"
    >
      <div>Fulltext Screening Type</div>
      <%= render 'components/single_select' %>
    </div>
    <template
      x-if="['pilot', 'n-size-single', 'n-size-double'].includes(fulltext_screening.fulltext_screening_type.selection.key)"
    >
      <div class="mb-4">
        <label for="no_of_citations"
          >Number of citations for this screening:</label
        >
        <input
          type="number"
          id="no_of_citations"
          name="fulltext_screening[no_of_citations]"
          min="1"
          max="100000"
          :value="fulltext_screening.no_of_citations"
        />
      </div>
    </template>

    <div class="mt-4">
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.exclusive_users = !fulltext_screening.exclusive_users"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[exclusive_users]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[exclusive_users]"
          :value="fulltext_screening.exclusive_users"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Exclusive Users</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Only these users may participate in this screening
          </span>
        </span>
      </div>
    </div>

    <template x-if="fulltext_screening.exclusive_users">
      <div
        x-data="{ pns: 'fulltext_screening', cns: 'user_ids', customInput: false, open: false }"
      >
        <div>Users</div>
        <%= render 'components/multi_select' %>
      </div>
    </template>

    <div class="grid grid-rows lg:grid-cols-4 gap-8 gap-x-12 mt-4">
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.all_tag = !fulltext_screening.all_tag; fulltext_screening.yes_tag = fulltext_screening.all_tag; fulltext_screening.no_tag = fulltext_screening.all_tag; fulltext_screening.maybe_tag = fulltext_screening.all_tag"
      >
        <input
          type="checkbox"
          :value="fulltext_screening.all_tag"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900"
            >All Labels Require Tags</span
          >
          <span class="text-sm text-gray-500" id="availability-description"
            >Screeners must always add a Tag
          </span>
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.yes_tag = !fulltext_screening.yes_tag; fulltext_screening.all_tag = (fulltext_screening.yes_tag && fulltext_screening.no_tag && fulltext_screening.maybe_tag)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[yes_tag_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[yes_tag_required]"
          :value="fulltext_screening.yes_tag"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Yes Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Tags</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.no_tag = !fulltext_screening.no_tag; fulltext_screening.all_tag = (fulltext_screening.yes_tag && fulltext_screening.no_tag && fulltext_screening.maybe_tag)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[no_tag_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[no_tag_required]"
          :value="fulltext_screening.no_tag"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">No Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Tags</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.maybe_tag = !fulltext_screening.maybe_tag; fulltext_screening.all_tag = (fulltext_screening.yes_tag && fulltext_screening.no_tag && fulltext_screening.maybe_tag)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[maybe_tag_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[maybe_tag_required]"
          :value="fulltext_screening.maybe_tag"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Maybe Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Tags</span
          >
        </span>
      </div>

      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.all_reason = !fulltext_screening.all_reason; fulltext_screening.yes_reason = fulltext_screening.all_reason; fulltext_screening.no_reason = fulltext_screening.all_reason; fulltext_screening.maybe_reason = fulltext_screening.all_reason"
      >
        <input
          type="checkbox"
          :value="fulltext_screening.all_reason"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900"
            >All Labels Require Reasons</span
          >
          <span class="text-sm text-gray-500" id="availability-description"
            >Screeners must always add a Reason
          </span>
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.no_reason = !fulltext_screening.no_reason; fulltext_screening.all_reason = (fulltext_screening.no_reason && fulltext_screening.maybe_reason)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[no_reason_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[no_reason_required]"
          :value="fulltext_screening.no_reason"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">No Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Reasons</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.maybe_reason = !fulltext_screening.maybe_reason; fulltext_screening.all_reason = (fulltext_screening.no_reason && fulltext_screening.maybe_reason)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[maybe_reason_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[maybe_reason_required]"
          :value="fulltext_screening.maybe_reason"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Maybe Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Reasons</span
          >
        </span>
      </div>
      <div class="flex items-center justify-between cursor-pointer"></div>

      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.all_note = !fulltext_screening.all_note; fulltext_screening.yes_note = fulltext_screening.all_note; fulltext_screening.no_note = fulltext_screening.all_note; fulltext_screening.maybe_note = fulltext_screening.all_note"
      >
        <input
          type="checkbox"
          :value="fulltext_screening.all_note"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900"
            >All Labels Require Notes</span
          >
          <span class="text-sm text-gray-500" id="availability-description"
            >Screeners must always add a Note
          </span>
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.yes_note = !fulltext_screening.yes_note; fulltext_screening.all_note = (fulltext_screening.yes_note && fulltext_screening.no_note && fulltext_screening.maybe_note)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[yes_note_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[yes_note_required]"
          :value="fulltext_screening.yes_note"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Yes Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Notes</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.no_note = !fulltext_screening.no_note; fulltext_screening.all_note = (fulltext_screening.yes_note && fulltext_screening.no_note && fulltext_screening.maybe_note)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[no_note_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[no_note_required]"
          :value="fulltext_screening.no_note"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">No Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Notes</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.maybe_note = !fulltext_screening.maybe_note; fulltext_screening.all_note = (fulltext_screening.yes_note && fulltext_screening.no_note && fulltext_screening.maybe_note)"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[maybe_note_required]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[maybe_note_required]"
          :value="fulltext_screening.maybe_note"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Maybe Labels</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Require Notes</span
          >
        </span>
      </div>

      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.only_predefined_reasons = !fulltext_screening.only_predefined_reasons"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[only_predefined_reasons]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[only_predefined_reasons]"
          :value="fulltext_screening.only_predefined_reasons"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900"
            >Exclusive reasons</span
          >
          <span class="text-sm text-gray-500" id="availability-description"
            >Limit reasons to only the given list (prevent user from providing
            other reasons)</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.only_predefined_tags = !fulltext_screening.only_predefined_tags"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[only_predefined_tags]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[only_predefined_tags]"
          :value="fulltext_screening.only_predefined_tags"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900">Exclusive tags</span>
          <span class="text-sm text-gray-500" id="availability-description"
            >Limit tags to only the given list (prevent user from providing
            other tags)</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.hide_author = !fulltext_screening.hide_author"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[hide_author]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[hide_author]"
          :value="fulltext_screening.hide_author"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900"
            >Hide Author Information</span
          >
          <span class="text-sm text-gray-500" id="availability-description"
            >Screeners will not be shown author information of citations</span
          >
        </span>
      </div>
      <div
        class="flex items-center justify-between cursor-pointer"
        @click="fulltext_screening.hide_journal = !fulltext_screening.hide_journal"
      >
        <input
          type="hidden"
          value="false"
          name="fulltext_screening[hide_journal]"
        />
        <input
          type="checkbox"
          name="fulltext_screening[hide_journal]"
          :value="fulltext_screening.hide_journal"
          class="!my-auto !mr-2 text-purple-900 bg-gray-200 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        />
        <span class="flex-grow flex flex-col">
          <span class="text-sm font-medium text-gray-900"
            >Hide Journal Information</span
          >
          <span class="text-sm text-gray-500" id="availability-description"
            >Screeners will not be shown journal information of citations</span
          >
        </span>
      </div>
    </div>

    <div
      class="mt-8"
      x-data="{ pns: 'fulltext_screening', cns: 'reason_ids', customInput: true, open: false }"
    >
      <div>Selected Reasons</div>
      <%= render 'components/multi_select' %>
    </div>

    <div
      class="mt-8"
      x-data="{ pns: 'fulltext_screening', cns: 'tag_ids', customInput: true, open: false }"
    >
      <div>Selected Tags</div>
      <%= render 'components/multi_select' %>
    </div>

    <!-- prettier-ignore -->
    <%= f.button :submit, params[:action] == 'new' ? 'Create Fulltext Screening' : 'Update Fulltext Screening', class: '!my-8' %>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("form", () => ({
      fulltext_screening: {
        fulltext_screening_type: {
          selection: { key: null, value: null },
          options: [],
        },
        all_tag: false,
        all_reason: false,
        all_note: false,
        no_of_citations: 0,
        exclusive_users: false,
        yes_tag: false,
        no_tag: false,
        maybe_tag: false,
        yes_reason: false,
        no_reason: false,
        maybe_reason: false,
        yes_note: false,
        no_note: false,
        maybe_note: false,
        only_predefined_reasons: false,
        only_predefined_tags: false,
        hide_author: false,
        hide_journal: false,
        user_ids: {
          selections: [],
          options: [],
        },
        reason_ids: {
          selections: [],
          options: [],
        },
        tag_ids: {
          selections: [],
          options: [],
        },
      },

      init() {
        this.initializeData();
      },

      async initializeData() {
        const response = await fetch(this.url, {
          method: "GET",
          headers: {
            Accept: "application/json",
            "Content-Type": "application/json",
          },
        });
        const data = await response.json();
        this.fulltext_screening = data.fulltext_screening;
      },
    }));
  });
</script>
