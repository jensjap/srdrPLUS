<div class="nested-fields" style="padding: 30px 0 30px 0;">
  <%= f.input :is_anova, as: :hidden, input_html: { value: false } %>
  <div class="comparate-groups">
    <%= f.simple_fields_for :comparate_groups do |comparate_group| %>
      <%= render 'result_statistic_sections/edit/comparate_group_fields', f: comparate_group %>
    <% end %>
    <div class="links add-comparate-group">
      <%= link_to_add_association 'add comparate group', f, :comparate_groups, partial: 'result_statistic_sections/edit/comparate_group_fields', render_options: { locals: { rss: rss, comparison: comparison } } %>
    </div>
  </div>
  <%= f.button :submit, t('save_comparison'), class: 'button small submit-comparison' %>
</div>
