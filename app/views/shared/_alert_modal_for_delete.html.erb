<div
  x-show="isAlertModalOpen"
  class="fixed inset-0 z-50 overflow-y-auto h-full w-full"
  x-cloak
>
  <div class="absolute inset-0 bg-gray-600 bg-opacity-50"></div>

  <div
    class="relative top-20 mx-auto p-5 border w-3/4 lg:w-1/2 h-auto shadow-lg rounded-md bg-white z-50"
    @click.outside="closeAlertModal()"
  >
    <div class="mt-3 text-center">
      <h3 class="text-lg lg:text-2xl leading-6 font-medium text-gray-900">Alert</h3>
      <div class="mt-2 px-4 py-2 lg:px-7 lg:py-3">
        <p class="text-sm lg:text-lg text-gray-500" x-html="alertModalContent"></p>
      </div>
      <div class="flex justify-around px-4 py-3">
        <input x-model="inputText" type="text" class="input-class" placeholder="Type DELETE here">
        <button
          id="ok-btn"
          class="px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-300"
          x-on:click="modalConfirmAction"
          x-bind:disabled="inputText.toUpperCase() !== 'DELETE'"
        >
          Confirm
        </button>
        <button
          id="cancel-btn"
          class="px-4 py-2 bg-gray-300 text-gray-700 text-base font-medium rounded-md shadow-sm hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-300"
          x-on:click="closeAlertModal()"
          type="button"
        >
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>
