  - if @recently_published_projects.present?
    .grid-x.align-center-middle.Recently-published
      .cell.medium-9
        h1 Recently published projects
      - @recently_published_projects.each do |rp|
        .cell.medium-9.recent-project
          .grid-x.grid-padding-x.grid-padding-y
            .cell.medium-4
              - if rp[1]['publication_requested_at'].present?
                .small = "First published on #{ rp[1]['publication_requested_at'].to_datetime.strftime("%B %d, %Y") }"
                .small = "Last edited on #{ rp[1]['updated_at'].to_datetime.strftime("%B %d, %Y") }"
              span.bold = rp[1]['title']
              .small
                |
                  #{ rp[1]['number_of_studies'] } Studies &bull; #{ rp[1]['number_of_key_questions'] } Key Questions &bull; #{ rp[1]['number_of_extraction_forms'] } Extraction Forms
            .cell.medium-8
              .small.summary Objectives: #{ rp[1]['description'].blank? ? 'None Provided' : rp[1]['description'] }
              .small.bold = link_to rp[1]['url'], target: '_blank' do
                |READ MORE
                i.fas.fa-external-link-alt.fa-sm<

      .cell.medium-9
        h4 = link_to 'https://srdr.ahrq.gov/projects/published', target: '_blank' do
          |SEE MORE PROJECTS
          i.fas.fa-external-link-alt.fa-sm<

