<div class="border p-2 w-9/12 xl:w-11/12 space-y-2">
  <h2 class="text-base font-bold border-b-2">
    Title, Funding Sources, and Dates
  </h2>
  <div>
    <label class="block text-xs font-bold text-gray-700"
      >Report Title (Required)
    </label>
    <div>
      <input
        type="text"
        class="block w-full rounded-md border-gray-300 shadow-sm focus:!border-purple-500 focus:!ring-purple-500 sm:text-sm"
        autofocus
        x-model="sdMetaDatum.report_title"
        @input.debounce="console.log(sdMetaDatum.report_title)"
      />
    </div>
  </div>
  <div>
    <label class="block text-xs font-bold text-gray-700"
      >Project Title in SRDR+
    </label>
    <div>
      <input
        type="text"
        class="block w-full rounded-md border-gray-300 shadow-sm focus:!border-purple-500 focus:!ring-purple-500 sm:text-sm"
        x-model="sdMetaDatum.project_name"
        disabled
      />
    </div>
  </div>
  <div>
    <label class="block text-xs font-bold text-gray-700">Funding Source </label>
    <div>
      <select
        multiple="true"
        id="funding_sources"
        x-model="sdMetaDatum.funding_sources"
        @change="console.log(sdMetaDatum.funding_sources)"
      >
        <template x-for="funding_source in sdMetaDatum?.funding_sources">
          <option
            value="funding_source.id"
            x-text="funding_source.text"
            selected="selected"
          ></option>
        </template>
      </select>
    </div>
  </div>
  <div>
    <label class="block text-xs font-bold text-gray-700"
      >Date of Last Search
    </label>
    <div>
      <input
        type="date"
        class="block w-full rounded-md border-gray-300 shadow-sm focus:!border-purple-500 focus:!ring-purple-500 sm:text-sm"
        x-model="sdMetaDatum.date_of_last_search"
        onfocus="this.showPicker()"
        @change="console.log(sdMetaDatum.date_of_last_search)"
      />
    </div>
  </div>
  <div>
    <label class="block text-xs font-bold text-gray-700"
      >Date of Publication to SRDR+
    </label>
    <div>
      <input
        type="date"
        class="block w-full rounded-md border-gray-300 shadow-sm focus:!border-purple-500 focus:!ring-purple-500 sm:text-sm"
        x-model="sdMetaDatum.date_of_publication_to_srdr"
        onfocus="this.showPicker()"
        @change="console.log(sdMetaDatum.date_of_publication_to_srdr)"
      />
    </div>
  </div>
  <div>
    <label class="block text-xs font-bold text-gray-700"
      >Date of Publication of Full Report (Required)
    </label>
    <div>
      <input
        type="date"
        class="block w-full rounded-md border-gray-300 shadow-sm focus:!border-purple-500 focus:!ring-purple-500 sm:text-sm"
        x-model="sdMetaDatum.date_of_publication_full_report"
        onfocus="this.showPicker()"
        @change="console.log(sdMetaDatum.date_of_publication_full_report)"
      />
    </div>
  </div>
</div>
