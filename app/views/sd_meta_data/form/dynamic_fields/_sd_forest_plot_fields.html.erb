<div class="nested-fields">
  <%= f.input :name, label: 'Result', input_html: { oninput: 'this.style.height = "";this.style.height = this.scrollHeight + "px"' } %>
  <%= f.input :pictures, as: :file, label: 'Pictures', input_html: { multiple: true } %>
  <div>
    <%= link_to_remove_association "Remove", f, data: { confirm: "Are you sure?" } %>
    <% f.object.pictures.each do |picture| %>
      <div>
        <%= image_tag(picture, class: 'openable sd-image') %><br>
        <%= link_to 'Remove', delete_image_attachment_picture_path(picture.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
      </div>
    <% end %>
  </div>
</div>
