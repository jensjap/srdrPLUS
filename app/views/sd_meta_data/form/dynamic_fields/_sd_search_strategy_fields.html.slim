.nested-fields
  i class="fa fa-arrows" style="padding-right: 5px; cursor: pointer;"
  div class="text-right"
    = link_to_remove_association "remove search strategy", f, data: { confirm: "This will remove this search strategy, and any input entered into it. Are you sure?" }
  = f.association :sd_search_database, include_blank: true, label: 'Database (Required)', input_html: { class: "sd_search_database sd-select2" }
  = f.input :date_of_search, label: 'Search Run Date (Required)'
  = f.input :search_limits, label: 'Search Limits'
  = f.input :search_terms, label: 'Search Terms (Required)'
