<div id="panel-2" class="tabs-panel is-active">
  <fieldset>
    <div style="display:flex; flex-direction: row;">
      <legend>URL Links</legend>
      <div class="status-switch" id="2-yes-no-section" class="<%= @sd_meta_datum.section_flag_2 ? 'completed' : 'draft' %>" data-sd_meta_datum_id="<%= @sd_meta_datum.id %>">
        <span class="status-label">
          <% if @sd_meta_datum.section_flag_2 %>
            Completed
          <% else %>
            Draft
          <% end %>
        </span>
      </div>
    </div>
    <div data-row-span="2">
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :prospero_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :prospero_link, placeholder: 'URL', as: :string, label: 'PROSPERO', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :protocol_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :protocol_link, placeholder: 'URL', as: :string, label: 'Protocol', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
    </div>
    <div data-row-span="2">
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :full_report_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :full_report_link, placeholder: 'URL', as: :string, label: 'Full Report (Required)', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :structured_abstract_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :structured_abstract_link, placeholder: 'URL', as: :string, label: 'Structured Abstract', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
    </div>
    <div data-row-span="2">
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :key_messages_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :key_messages_link, placeholder: 'URL', as: :string, label: 'Main Points or Key Messages', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :abstract_summary_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :abstract_summary_link, placeholder: 'URL', as: :string, label: 'Lay Abstract / Lay Language Summary', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
    </div>
    <div class="sd-inner">
      <div data-row-span="1">
        <div class="sd-item" data-field-span="1">
          <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :evidence_summary_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
            <%= f.input :evidence_summary_link, placeholder: 'URL', as: :string, label: 'Evidence Summary / Executive Summary', input_html: { class: 'url-input' } %>
          <% end %>
        </div>
      </div>
    </div>
    <div data-row-span="2">
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :disposition_of_comments_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :disposition_of_comments_link, placeholder: 'URL', as: :string, label: 'Disposition of Comments', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :srdr_data_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :srdr_data_link, placeholder: 'URL', as: :string, label: 'Downloadable Content', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
    </div>
    <div data-row-span="2">
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :most_previous_version_srdr_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :most_previous_version_srdr_link, placeholder: 'URL', as: :string, label: 'Most Recent Previous Version of SRDR+ Data', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
      <div class="sd-item" data-field-span="1">
        <%= simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { id: :most_previous_version_full_report_link, class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f| %>
          <%= f.input :most_previous_version_full_report_link, placeholder: 'URL', as: :string, label: 'Most Recent Previous Version of Full Report', input_html: { class: 'url-input' } %>
        <% end %>
      </div>
    </div>
    <div data-row-span="2">
      <div data-field-span="1">
        <label>Journal Articles</label>
        <div class="cocoon-container journal-article-url-list">
          <%= render 'sd_meta_data/form/nested_associations/journal_article_url_list', sd_meta_datum: @sd_meta_datum, url: @url %>
        </div>
      </div>
      <div data-field-span="1">
        <label>Other Items</label>
        <div class="cocoon-container other-item-list">
          <%= render 'sd_meta_data/form/nested_associations/other_item_list', sd_meta_datum: @sd_meta_datum, url: @url %>
        </div>
      </div>
    </div>
