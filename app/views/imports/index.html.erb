<div x-data="{ tab: 'import' }" class="p-4 lg:p-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-bold">Data Import & Export</h1>
    </div>
  </div>
  <div>
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex" aria-label="Tabs">
        <div
          @click="tab = 'import'"
          class="text-gray-500 w-1/2 py-2 px-1 text-center border-b-2 font-bold text-sm cursor-pointer"
          :class="tab == 'import' && 'border-purple-900 text-srdr-primary'"
        >
          IMPORT
        </div>

        <div
          @click="tab = 'export'"
          class="text-gray-500 w-1/2 py-2 px-1 text-center border-b-2 font-bold text-sm cursor-pointer"
          :class="tab == 'export' && 'border-purple-900 text-srdr-primary'"
        >
          EXPORT
        </div>
      </nav>
    </div>
  </div>

  <div x-cloak x-show="tab == 'import'"><%= render 'import' %></div>
  <div x-cloak x-show="tab == 'export'">
    <%= render 'export', tab: 'export' %>
  </div>
</div>
